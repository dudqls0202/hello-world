//calculator examples
const calculator = {
  plus: function(a, b){
    return a + b;
  },
  minus: function(a, b){
    return a - b;
  },
  multiply: function(a, b){
    return a * b;
  },
  divide: function(a, b){
    return a / b;  
  },
  powers: function(a, b){
    return a ** b;
  },
}

// console.log(greetNicolas)
const plus = calculator.plus(5, 5)
const minus = calculator.minus(5, 5)
const multiply = calculator.multiply(5, 5) 
const divide = calculator.divide(5, 5)
const powers = calculator.powers(5, 3)
console.log(plus, minus, multiply, divide, powers)
// calculator(plus, bouble or divide)

